@{
    ViewData["Title"] = "Equipment Details Page";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-9">
            <h4 class="text-light mb-4">Equipment Details</h4>
            <div class="card bg-dark text-white shadow-sm p-3">
                <img src="/images/canon.jpg" class="card-img-top rounded" alt="Equipment Image"
                    style="width: 400px; height: 250px;">
                <div class="card-body">
                    <h3 class="card-title mt-2">Canon EOS 50D</h3>
                    <div class="mb-3">
                        <span class="badge bg-primary me-2">DSLR Camera</span>
                        <span class="badge bg-success">Available</span>
                    </div>
                    <h4 class="text-success">$100.00 per day</h4>
                    <p class="text-muted">The Canon EOS 50D is a powerful DSLR camera featuring a 15.1 MP APS-C CMOS
                        sensor,
                        fast DIGIC 4 processor, and high ISO performance, making it ideal for photographers and
                        enthusiasts.
                    </p>

                    <div class="mt-4">
                        <h5>Specifications</h5>
                        <ul class="text-muted">
                            <li>Sensor: 15.1 MP APS-C CMOS</li>
                            <li>Processor: DIGIC 4</li>
                            <li>ISO Range: 100-3200 (expandable to 12800)</li>
                            <li>Autofocus: 9-point AF system</li>
                            <li>Shutter Speed: 1/8000 to 30 sec</li>
                            <li>Continuous Shooting: 6.3 fps</li>
                            <li>LCD: 3.0-inch, 920k-dot</li>
                            <li>Video: Not supported</li>
                            <li>Battery Life: Approx. 800 shots</li>
                            <li>Weight: 822g (body only)</li>
                        </ul>
                    </div>

                    <div class="mt-3">
                        <button class="btn button-primary" style="background-color: #1f2a55; color: white;"
                            data-bs-toggle="modal" data-bs-target="#rentEquipmentModal">
                            <i class="bi bi-cart-plus me-1"></i> Rent
                        </button>
                        <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#editEquipmentModal">
                            <i class="bi bi-pencil me-1"></i> Edit
                        </button>
                        <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteEquipmentModal">
                            <i class="bi bi-trash me-1"></i> Delete
                        </button>
                    </div>
                </div>
            </div>

            <div class="mt-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-light">User Feedback</h4>
                    <button class="btn button-primary btn-sm" style="background-color: #1f2a55; color: white;"
                        data-bs-toggle="modal" data-bs-target="#feedbackModal">
                        Add Feedback
                    </button>
                </div>

                <div style="max-height: 440px; overflow-y: auto;">
                    @for (int i = 0; i < 5; i++)
                    {
                        <div class="list-group mb-3">
                            <div class="list-group-item bg-secondary text-white border-secondary p-3">
                                <h6 class="text-info mb-1">user@example.com</h6>
                                <strong>Feedback Title</strong>
                                <p class="text-muted small">Short feedback content...</p>
                                <p class="text-warning m-0">⭐⭐⭐⭐⭐</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="rentEquipmentModal" tabindex="-1" aria-labelledby="rentEquipmentModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header">
                <h5 class="modal-title" id="rentEquipmentModalLabel">Rent Equipment</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="rentEquipmentForm">
                    <div class="mb-3">
                        <label for="rentalStartDate" class="form-label">Start Date</label>
                        <input type="date" class="form-control bg-dark text-white border-secondary" id="rentalStartDate"
                            required>
                    </div>
                    <div class="mb-3">
                        <label for="rentalEndDate" class="form-label">End Date</label>
                        <input type="date" class="form-control bg-dark text-white border-secondary" id="rentalEndDate"
                            required>
                    </div>
                    <div class="mb-3">
                        <label for="rentalNotes" class="form-label">Notes (Optional)</label>
                        <textarea class="form-control bg-dark text-white border-secondary" id="rentalNotes"
                            rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" form="rentEquipmentForm" class="btn button-primary"
                    style="background-color: #1f2a55; color: white;"
                    onclick="window.location.href='/home/Payment'">Confirm Rental</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editEquipmentModal" tabindex="-1" aria-labelledby="editEquipmentModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header">
                <h5 class="modal-title" id="editEquipmentModalLabel">Edit Equipment</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editEquipmentForm">
                    <input type="hidden" id="editEquipmentId">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="editEquipmentName" class="form-label">Equipment Name</label>
                                <input type="text" class="form-control bg-dark text-white border-secondary"
                                    id="editEquipmentName" value="Canon EOS 50D" required>
                            </div>
                            <div class="mb-3">
                                <label for="editEquipmentCategory" class="form-label">Category</label>
                                <select class="form-select bg-dark text-white border-secondary"
                                    id="editEquipmentCategory" required>
                                    <option value="">Select Category</option>
                                    <option value="category1" selected>DSLR Camera</option>
                                    <option value="category2">Video Camera</option>
                                    <option value="category3">Lens</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="editEquipmentPrice" class="form-label">Price ($)</label>
                                <input type="number" class="form-control bg-dark text-white border-secondary"
                                    id="editEquipmentPrice" min="0" step="0.01" value="100.00" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="editEquipmentDescription" class="form-label">Description</label>
                                <textarea class="form-control bg-dark text-white border-secondary"
                                    id="editEquipmentDescription" rows="3"
                                    required>The Canon EOS 50D is a powerful DSLR camera featuring a 15.1 MP APS-C CMOS sensor, fast DIGIC 4 processor, and high ISO performance, making it ideal for photographers and enthusiasts.</textarea>
                            </div>
                            <div class="mb-3">
                                <label for="editEquipmentImage" class="form-label">Equipment Image</label>
                                <input type="file" class="form-control bg-dark text-white border-secondary"
                                    id="editEquipmentImage">
                                <div class="mt-2">
                                    <img src="/images/canon.jpg" class="img-thumbnail" alt="Current Image"
                                        style="max-width: 100px;">
                                    <small class="d-block text-muted">Current image</small>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="editEquipmentStatus" class="form-label">Status</label>
                                <select class="form-select bg-dark text-white border-secondary" id="editEquipmentStatus"
                                    required>
                                    <option value="available" selected>Available</option>
                                    <option value="maintenance">Under Maintenance</option>
                                    <option value="reserved">Reserved</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="editEquipmentSpecifications" class="form-label">Specifications</label>
                        <textarea class="form-control bg-dark text-white border-secondary"
                            id="editEquipmentSpecifications" rows="3">Sensor: 15.1 MP APS-C CMOS
Processor: DIGIC 4
ISO Range: 100-3200 (expandable to 12800)
Autofocus: 9-point AF system
Shutter Speed: 1/8000 to 30 sec
Continuous Shooting: 6.3 fps
LCD: 3.0-inch, 920k-dot
Video: Not supported
Battery Life: Approx. 800 shots
Weight: 822g (body only)</textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" form="editEquipmentForm" class="btn button-primary"
                    style="background-color: #1f2a55; color: white;">Save Changes</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteEquipmentModal" tabindex="-1" aria-labelledby="deleteEquipmentModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteEquipmentModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this equipment? This action cannot be undone.</p>
                <p class="fw-bold">Equipment Name: <span id="deleteEquipmentName">Canon EOS 50D</span></p>
                <p class="text-danger">Warning: Deleting this equipment will also remove all associated rental records.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger">Delete Equipment</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="feedbackModal" tabindex="-1" aria-labelledby="feedbackModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header">
                <h5 class="modal-title" id="feedbackModalLabel">Submit Feedback</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="SubmitFeedback">
                    <div class="mb-3">
                        <label for="email" class="form-label fw-bold text-light">Email Address</label>
                        <input type="email" id="email" name="Email"
                            class="form-control bg-secondary bg-opacity-25 border-secondary text-white"
                            placeholder="Enter your email" required>
                    </div>
                    <div class="mb-3">
                        <label for="title" class="form-label fw-bold text-light">Title</label>
                        <input type="text" id="title" name="Title"
                            class="form-control bg-secondary bg-opacity-25 border-secondary text-white"
                            placeholder="Enter the title" required>
                    </div>
                    <div class="mb-3">
                        <label for="content" class="form-label fw-bold text-light">Feedback</label>
                        <textarea id="content" name="Content"
                            class="form-control bg-secondary bg-opacity-25 border-secondary text-white"
                            placeholder="Enter your feedback" rows="5" required></textarea>
                    </div>

                    <div class="mb-3 text-center">
                        <label class="form-label fw-bold text-light">Rate Your Experience</label>
                        <div class="d-flex justify-content-center">
                            <input type="radio" name="Rating" value="5" id="star5" class="btn-check" required>
                            <label for="star5" class="btn btn-outline-warning mx-1">⭐</label>

                            <input type="radio" name="Rating" value="4" id="star4" class="btn-check">
                            <label for="star4" class="btn btn-outline-warning mx-1">⭐</label>

                            <input type="radio" name="Rating" value="3" id="star3" class="btn-check">
                            <label for="star3" class="btn btn-outline-warning mx-1">⭐</label>

                            <input type="radio" name="Rating" value="2" id="star2" class="btn-check">
                            <label for="star2" class="btn btn-outline-warning mx-1">⭐</label>

                            <input type="radio" name="Rating" value="1" id="star1" class="btn-check">
                            <label for="star1" class="btn btn-outline-warning mx-1">⭐</label>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn button-primary"
                            style="background-color: #1f2a55; color: white;">
                            Submit Feedback
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>