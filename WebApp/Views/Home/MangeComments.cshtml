@{
    ViewData["Title"] = "Manage Comments";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="card bg-dark text-white shadow mb-4">
                <div class="card-body p-4">
                    <h3 class="h5 mb-3">All Comments</h3>
                    <div class="mb-3 d-flex gap-2">
                        <input type="text" id="searchComments" class="form-control bg-dark text-white border-secondary"
                            placeholder="Search comments...">
                        <select id="filterComments" class="form-select bg-dark text-white border-secondary">
                            <option value="all">All</option>
                            <option value="hidden">Hidden</option>
                            <option value="unhidden">unHidden</option>
                        </select>
                    </div>
                    <div id="commentsList">
                        <div class="card bg-secondary text-white mb-3">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <div>
                                    <p class="mb-1"><strong>Comment ID:</strong> #54321</p>
                                    <p class="mb-1"><strong>Product ID:</strong> #5678</p>
                                    <p class="mb-1"><strong>Status:</strong> Hidden</p>
                                    <p class="mb-1"><strong>Comment:</strong> Lorem ipsum dolor sit amet consectetur
                                        adipisicing elit. Ratione deserunt corporis, vero repudiandae praesentium alias
                                        vel earum animi consectetur vitae rem placeat nesciunt recusandae! Libero nemo
                                        in quos modi eveniet.</p>
                                </div>
                                <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Home"
                                    asp-action="CommentDetails">
                                    View
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
