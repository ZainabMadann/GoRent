@{
    ViewData["Title"] = "Profile Page";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="card bg-#1f1f1f text-white shadow">
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-4 mb-3 mb-md-0">
                            <div class="profile-info">
                                <p><strong>Full Name:</strong> marwa mohamed</p>
                                <p><strong>Email Address:</strong> marwa@gmail.com</p>
                                <button class="btn btn-primary btn-sm mb-2 w-100 profile-btn" id="updateProfileBtn">Update Profile</button>
                                <button class="btn btn-primary btn-sm w-100 profile-btn" id="changePasswordBtn">Change Password</button>
                            </div>
                        </div>
                        
                        <div class="col-md-8">
                            <hr class="d-md-none border-secondary my-3">
                            
                            <div id="updateProfileForm" style="display: none;" class="form-container">
                                <form method="post" asp-action="UpdateProfile">
                                    <div class="mb-3">
                                        <label for="name" class="form-label">Full Name</label>
                                        <input type="text" id="name" name="FullName" class="form-control" value="marwa mohamed" required>
                                    </div>

                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email Address</label>
                                        <input type="email" id="email" name="Email" class="form-control" value="marwa@gmail.com" required>
                                    </div>

                                    <div class="text-center">
                                        <button type="submit" class="btn btn-primary btn-sm me-2">Update Profile</button>
                                        <button type="button" class="btn btn-secondary btn-sm" id="closeUpdateProfileBtn">Close</button>
                                    </div>
                                </form>
                            </div>

                            <div id="changePasswordForm" style="display: none;" class="form-container">
                                <form method="post" asp-action="ChangePassword">
                                    <div class="mb-3">
                                        <label for="currentPassword" class="form-label">Current Password</label>
                                        <input type="password" id="currentPassword" name="CurrentPassword" class="form-control" required>
                                    </div>

                                    <div class="mb-3">
                                        <label for="newPassword" class="form-label">New Password</label>
                                        <input type="password" id="newPassword" name="NewPassword" class="form-control" required>
                                    </div>

                                    <div class="mb-3">
                                        <label for="confirmPassword" class="form-label">Confirm New Password</label>
                                        <input type="password" id="confirmPassword" name="ConfirmPassword" class="form-control" required>
                                    </div>

                                    <div class="text-center">
                                        <button type="submit" class="btn btn-primary btn-sm me-2">Change Password</button>
                                        <button type="button" class="btn btn-secondary btn-sm" id="closeChangePasswordBtn">Close</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        body {
            background-color: #121212;
            color: #fff;
        }

        .card {
            background-color: #1f1f1f !important;
            border-radius: 15px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
        }
        
        .form-container {
            max-width: 85%;
            margin: 0 auto;
        }
        
        .profile-btn {
            font-size: 12px;
            padding: 5px 8px;
            max-width: 90%;
            margin: 0 auto;
            display: block;
        }
        
        .form-control {
            width: 100%;
            padding: 8px; 
            background-color: #2c2c2c !important;
            border: 1px solid #444 !important;
            border-radius: 8px;
            font-size: 14px;
            color: #fff !important;
        }
        
        .form-control::placeholder {
            color: #aaa;
        }
        
        .form-label {
            font-weight: bold;
            color: #f0f0f0;
        }
        
        .btn-primary {
            background-color: #1f2a55 !important;
            border: none !important;
            padding: 6px 12px;
            font-size: 13px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }
        
        .btn-primary:hover {
            background-color: #2a3565 !important;
        }
        
        .btn-secondary {
            background-color: #333 !important;
            border: none !important;
            padding: 6px 12px;
            font-size: 13px;
            border-radius: 5px;
        }
        
        .btn-secondary:hover {
            background-color: #444 !important;
        }
    </style>
}

@section Scripts {
    <script>
        document.getElementById('updateProfileBtn').addEventListener('click', function() {
            document.getElementById('updateProfileForm').style.display = 'block';
            document.getElementById('changePasswordForm').style.display = 'none';
        });

        document.getElementById('changePasswordBtn').addEventListener('click', function() {
            document.getElementById('changePasswordForm').style.display = 'block';
            document.getElementById('updateProfileForm').style.display = 'none'; 
        });

        document.getElementById('closeUpdateProfileBtn').addEventListener('click', function() {
            document.getElementById('updateProfileForm').style.display = 'none';
        });

        document.getElementById('closeChangePasswordBtn').addEventListener('click', function() {
            document.getElementById('changePasswordForm').style.display = 'none';
        });
    </script>
}