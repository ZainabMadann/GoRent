@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid py-5 custom-bg">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="row mb-5">
                <div class="col-12 col-md-6 mb-4 mb-md-0">
                    <div class="rounded bg-image d-flex align-items-center justify-content-center" style="background-image: url('https://cdn.usegalileo.ai/sdxl10/d67aac8d-ed0b-4b7c-ac24-9088971368a6.png'); 
                    background-size: cover; background-position: center; 
                    aspect-ratio: 16/9;">
                    </div>
                </div>
                <div class="col-12 col-md-6 d-flex flex-column justify-content-center">
                    <div class="mb-4">
                        <h1 class="fw-bold text-white display-5">Rent the Right Equipment, Get the Job Done Right!</h1>
                        <h2 class="text-white fs-6">Discover professional-grade equipment for your projects.</h2>
                    </div>
                    <div class="d-flex gap-2" style="flex-wrap: nowrap;">
                       <button class="btn custom-btn fw-bold"
        onclick="window.location.href='@Url.Action("AllCategoriesAndEquipments", "Category")'">
    Categories & Equipments
</button>

                        <button class="btn cancel-btn fw-bold" onclick="window.location.href='/home/ContactUs'">Contact
                            Us</button>
                    </div>

                </div>
            </div>

            <h2 class="text-white fw-bold fs-3 mb-3">Featured Equipment</h2>

            <div class="overflow-auto pb-2" style="scrollbar-width: none; -ms-overflow-style: none;">
                <div class="d-flex gap-3" style="min-width: min-content;">
                    <div class="card bg-dark text-white" style="min-width: 240px; flex: 1;">
                        <div class="card-img-top bg-image" style="background-image: url('https://cdn.usegalileo.ai/sdxl10/8dbc8ba5-d903-4b82-bbf2-ec96837c2ce2.png'); 
                        background-size: cover; background-position: center; 
                        aspect-ratio: 16/9;">
                        </div>
                        <div class="card-body d-flex flex-column">
                            <div>
                                <h5 class="card-title">Forklift</h5>
                                <p class="card-text text-secondary">Perfect for heavy lifting</p>
                            </div>
                            <button class="btn custom-btn mt-4 w-100 fw-bold ">Explore</button>
                        </div>
                    </div>

                    <div class="card bg-dark text-white" style="min-width: 240px; flex: 1;">
                        <div class="card-img-top bg-image" style="background-image: url('https://cdn.usegalileo.ai/sdxl10/b2f8736f-c148-49ff-ac60-96201b32c384.png'); 
                        background-size: cover; background-position: center; 
                        aspect-ratio: 16/9;">
                        </div>
                        <div class="card-body d-flex flex-column">
                            <div>
                                <h5 class="card-title">Steamroller</h5>
                                <p class="card-text text-secondary">Ideal for paving projects</p>
                            </div>
                            <button class="btn custom-btn mt-4  w-100 fw-bold">Explore</button>
                        </div>
                    </div>

                    <div class="card bg-dark text-white" style="min-width: 240px; flex: 1;">
                        <div class="card-img-top bg-image" style="background-image: url('https://cdn.usegalileo.ai/sdxl10/b92dd256-910c-4ec0-bd08-ab6d44f66a6a.png'); 
                        background-size: cover; background-position: center; 
                        aspect-ratio: 16/9;">
                        </div>
                        <div class="card-body d-flex flex-column">
                            <div>
                                <h5 class="card-title">Construction Worker</h5>
                                <p class="card-text text-secondary">Safety equipment for workers</p>
                            </div>
                            <button class="btn custom-btn mt-4 w-100 fw-bold">Explore</button>
                        </div>
                    </div>

                    <div class="card bg-dark text-white" style="min-width: 240px; flex: 1;">
                        <div class="card-img-top bg-image" style="background-image: url('https://cdn.usegalileo.ai/sdxl10/2ca2ccf6-3241-4b3c-b620-0b53d2f04fee.png'); 
                        background-size: cover; background-position: center; 
                        aspect-ratio: 16/9;">
                        </div>
                        <div class="card-body d-flex flex-column">
                            <div>
                                <h5 class="card-title">Truck</h5>
                                <p class="card-text text-secondary">Reliable transportation</p>
                            </div>
                            <button class="btn custom-btn mt-4 w-100 fw-bold">Explore</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer text-muted text-center py-3">
        <div class="container">
