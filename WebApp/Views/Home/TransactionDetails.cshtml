
@{
    ViewData["Title"] = "Transaction Details";
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="card bg-dark text-white shadow">
                <div class="card-body p-4">
                    <h3 class="h5 mb-3">Transaction Details</h3>
                    <p><strong>Transaction ID:</strong> #67890</p>
                    <p><strong>Status:</strong> Completed</p>
                    <p><strong>Amount:</strong> $100</p>
                    <p><strong>Date:</strong> 10 March 2025</p>
                    <div class="d-flex gap-2">
                        <button class="btn btn-warning">Update Transaction</button>
                        <button class="btn btn-danger">Cancel Transaction</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
