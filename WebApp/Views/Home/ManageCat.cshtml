@{
    ViewData["Title"] = "Manage Categories";
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="card bg-dark text-white shadow mb-4">
                <div class="card-body p-4">
                    <h3 class="h5 mb-3">All Categories</h3>

                    <div class="mb-3 d-flex gap-2">
                        <input type="text" id="searchCategories"
                            class="form-control bg-dark text-white border-secondary" placeholder="Search categories...">
                        <button type="button" class="btn button-primary px-3"
                            style="background-color: #1f2a55; color: white; white-space: nowrap;" data-bs-toggle="modal"
                            data-bs-target="#addCategoryModal">
                            <i class="bi bi-plus-lg me-1"></i> Add New
                        </button>

                    </div>

                    <div id="categoriesList" style="max-height: 380px; overflow-y: auto;">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <div class="card bg-secondary text-white mb-3">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <div>
                                        <p class="mb-1"><strong>Name:</strong> Category @i</p>
                                        <p class="mb-1"><strong>Description:</strong> Description for category @i</p>
                                    </div>
                                    <div class="d-flex flex-column gap-2">
                                        <button class="btn btn-sm btn-outline-light fw-bold" data-bs-toggle="modal"
                                            data-bs-target="#editCategoryModal" data-category-id="@i">
                                            <i class="bi bi-pencil"></i> Edit
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger fw-bold" data-bs-toggle="modal"
                                            data-bs-target="#deleteCategoryModal" data-category-id="@i">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addCategoryModal" tabindex="-1" aria-labelledby="addCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header">
                <h5 class="modal-title" id="addCategoryModalLabel">Add New Category</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addCategoryForm">
                    <div class="mb-3">
                        <label for="categoryName" class="form-label">Category Name</label>
                        <input type="text" class="form-control bg-dark text-white border-secondary" id="categoryName"
                            required>
                    </div>
                    <div class="mb-3">
                        <label for="categoryDescription" class="form-label">Description</label>
                        <textarea class="form-control bg-dark text-white border-secondary" id="categoryDescription"
                            rows="3" required></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" form="addCategoryForm" class="btn button-primary"
                    style="background-color: #1f2a55; color: white;">Add Category</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editCategoryModal" tabindex="-1" aria-labelledby="editCategoryModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header">
                <h5 class="modal-title" id="editCategoryModalLabel">Edit Category</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editCategoryForm">
                    <input type="hidden" id="editCategoryId">
                    <div class="mb-3">
                        <label for="editCategoryName" class="form-label">Category Name</label>
                        <input type="text" class="form-control bg-dark text-white border-secondary"
                            id="editCategoryName" value="Category Name" required>
                    </div>
                    <div class="mb-3">
                        <label for="editCategoryDescription" class="form-label">Description</label>
                        <textarea class="form-control bg-dark text-white border-secondary" id="editCategoryDescription"
                            rows="3" required>Category description text here</textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" form="editCategoryForm" class="btn button-primary"
                    style="background-color: #1f2a55; color: white;">Save Changes</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteCategoryModal" tabindex="-1" aria-labelledby="deleteCategoryModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteCategoryModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this category? This action cannot be undone.</p>
                <p class="fw-bold">Category Name: <span id="deleteCategoryName">Category Name</span></p>
                <p class="text-danger">Warning: Deleting this category will also remove it from all associated
                    equipment.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger">Delete Category</button>
            </div>
        </div>
    </div>
</div>