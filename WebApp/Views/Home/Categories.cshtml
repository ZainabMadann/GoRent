@{
    ViewData["Title"] = "Categories Page";
}

<div class="container mt-2">

    <form class="d-flex mb-3">
        <input type="search" class="form-control w-25 me-2 bg-secondary bg-opacity-25 border-secondary" placeholder="âŒ• Search a Category or Equipment">
        <div class="dropdown me-2">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="filterDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-funnel-fill"></i>
            </button>
            <ul class="dropdown-menu bg-secondary" aria-labelledby="filterDropdown">
                <li><a class="dropdown-item text-white" href="#">Category</a></li>
                <li><a class="dropdown-item text-white" href="#">Equipment</a></li>
            </ul>
        </div>
        <button type="submit" class="btn button-primary px-3" style="background-color: #1f2a55; color: white;">Search</button>
    </form>

    <h4 class="text-white text-center mb-3 mt-4">All Categories</h4>

    <div class="row row-cols-1 row-cols-md-5 g-4">
        @for (int i = 0; i < 5; i++)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0 bg-dark text-white">
                    <div class="card-body">
                        <h5 class="card-title">Category Name</h5>
                        <p class="card-text">Description</p>
                        <p class="text-muted">Items Available: <span class="fw-bold">5</span></p>
                        <a href="#" class="btn button-primary px-3" style="background-color: #1f2a55; color: white;">View</a>
                    </div>
                </div>
            </div>
        }
    </div>
     <h4 class="text-white text-center mb-3 mt-5">All Equipments</h4>
    <div class="row row-cols-1 row-cols-md-5 g-4">
        @for (int i = 0; i < 5; i++)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0 bg-dark text-white">
                    <img src="https://via.placeholder.com/150" class="card-img-top" alt="Equipment Image">
                    <div class="card-body">
                        <h5 class="card-title">Equipment Name</h5>
                        <p class="fw-bold">$100</p>
                        <a asp-controller="Home" asp-action="EqDetails" class="btn button-primary px-3" style="background-color: #1f2a55; color: white;">View</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
