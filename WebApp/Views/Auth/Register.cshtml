@{
    ViewData["Title"] = "Register";
}
@model dynamic

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark text-white shadow">
                <div class="card-body p-4">
                    <h3 class="mb-4 text-white">Create an Account</h3>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }

                    <form method="post" asp-action="Register" asp-controller="Auth">
                        <div class="mb-3">
                            <label class="form-label">Full Name</label>
                           <input type="text" name="fullName"
       class="form-control bg-dark text-white border-secondary"
       value="@ViewData["FullName"]"
       required />

                            @Html.ValidationMessage("fullName", "", new { @class = "text-danger small" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" name="email"
       class="form-control bg-dark text-white border-secondary"
       value="@ViewData["Email"]"
       required />

                            @Html.ValidationMessage("email", "", new { @class = "text-danger small" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <input type="password" name="password"
                                   class="form-control bg-dark text-white border-secondary"
                                   required />
                            @Html.ValidationMessage("password", "", new { @class = "text-danger small" })
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn custom-btn text-white fw-bold">Register</button>
                        </div>

                        <div class="text-center mt-3">
                            <a href="@Url.Action("Login", "Auth")" class="text-info">Already have an account? Login</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
