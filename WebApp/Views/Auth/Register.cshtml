@{
    ViewData["Title"] = "Register";
}

<div class="d-flex justify-content-center align-items-center h-100">
    <div class="dcustom-bg p-4 rounded" style="max-width: 400px;">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>
        }

        <form method="post" asp-action="Register" asp-controller="Auth">
            <div class="mb-3">
                <label class="form-label fw-bold text-light">Full Name</label>
                <input type="text" name="fullName"
                       class="form-control bg-secondary bg-opacity-25 border-secondary text-white"
                       value="@ViewData["FullName"]"
                       placeholder="Enter your full name" required>
                @Html.ValidationMessage("fullName", "", new { @class = "text-danger small" })
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold text-light">Email Address</label>
                <input type="email" name="email"
                       class="form-control bg-secondary bg-opacity-25 border-secondary text-white"
                       value="@ViewData["Email"]"
                       placeholder="Enter your email" required>
                @Html.ValidationMessage("email", "", new { @class = "text-danger small" })
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold text-light">Password</label>
                <input type="password" name="password"
                       class="form-control bg-secondary bg-opacity-25 border-secondary text-white"
                       placeholder="Create a password" required>
                @Html.ValidationMessage("password", "", new { @class = "text-danger small" })
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="custom-btn">Register</button>
            </div>

            <div class="text-center mt-3 text-white">
                Already have an account? <a asp-action="Login" class="custom-link">Login here</a>
            </div>
        </form>
    </div>
</div>