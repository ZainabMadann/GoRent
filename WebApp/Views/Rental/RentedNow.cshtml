@model List<ClassLibrary.Model.RentalRequest>
@{
    ViewData["Title"] = "Currently Rented Equipment";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <div class="row mb-3">
        <div class="col-md-6">
            <input type="text" id="searchInput" class="form-control" placeholder="Search equipment...">
        </div>
        <div class="col-md-3">
            <select id="filterSelect" class="form-select">
                <option value="all">All Rentals</option>
                <option value="active">Active</option>
                <option value="overdue">Overdue</option>
            </select>
        </div>
    </div>

    <div id="rentedItemsContainer">
        <partial name="_RentedNowPartial" model="Model" />
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#searchInput, #filterSelect').on('input change', function() {
                const searchTerm = $('#searchInput').val();
                const filterValue = $('#filterSelect').val();

                $.get('@Url.Action("RentedNowPartial", "Rental")', {
                    search: searchTerm,
                    filter: filterValue
                }, function(data) {
                    $('#rentedItemsContainer').html(data);
                });
            });
        });
    </script>
}