@model List<ClassLibrary.Model.Equipment>

@foreach (var equipment in Model)
{
    <div class="card bg-secondary text-white mb-3">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div class="d-flex">
                <div class="me-3">
                    <img src="@(equipment.ImagePath ?? "/images/default.jpg")"
                         class="card-img-top rounded"
                         alt="Equipment Image"
                         style="width: 200px; height: 130px; margin-left: 10px;">
                </div>
                <div>
                    <p class="mb-1"><strong>Name:</strong> @equipment.Name</p>
                    <p class="mb-1"><strong>Category:</strong> @(equipment.Category?.Name ?? "N/A")</p>
                    <p class="mb-1"><strong>Price:</strong> $@equipment.RentalRate.ToString("0.00")</p>
                    <p class="mb-1"><strong>Status:</strong> @(equipment.EquipmentStatus?.Description ?? "N/A")</p>
                </div>
            </div>
            <div class="d-flex flex-column gap-2 align-items-center">
                <button class="btn btn-sm btn-outline-light fw-bold"
                        onclick="window.location.href='/equipment/details/@equipment.EquipmentId'">
                    <i class="bi bi-pencil"></i> View
                </button>
            </div>
        </div>
    </div>
}
