@model List<ClassLibrary.Model.Category>

@foreach (var category in Model)
{
    <div class="card bg-secondary text-white mb-3">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <p class="mb-1"><strong>Name:</strong> @category.Name</p>
                <p class="mb-1"><strong>Description:</strong> @category.Description</p>
            </div>
            <div class="d-flex flex-column gap-2">
                <button class="btn btn-sm btn-outline-light fw-bold"
                        onclick="window.location.href='/Category/CategoryDetails?categoryId=@category.CategoryId'">
                    <i class="bi bi-eye"></i> View
                </button>
            </div>
        </div>
    </div>
}
