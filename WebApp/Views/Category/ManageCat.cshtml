@model List<ClassLibrary.Model.Category>


@{
    ViewData["Title"] = "Manage Categories";
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="card bg-dark text-white shadow mb-4">
                <div class="card-body p-4">
                    <h3 class="h5 mb-3">All Categories</h3>

                    <div class="mb-3 d-flex gap-2">
                        <input type="text" id="searchEquipment" class="form-control bg-dark text-white border-secondary"
                            placeholder="Search category...">
                        <select id="filterCategory" class="form-select bg-dark text-white border-secondary">
                            <option value="all">All Categories</option>
                            <option value="category1">Category 1</option>
                            <option value="category2">Category 2</option>
                            <option value="category3">Category 3</option>
                        </select>
                        <button type="button" class="btn button-primary px-3"
                            style="background-color: #1f2a55; color: white; white-space: nowrap;" data-bs-toggle="modal"
                            data-bs-target="#addCategoryModal">
                            <i class="bi bi-plus-lg me-1"></i> Add New
                        </button>
                    </div>

                    <div id="categoriesList" style="max-height: 380px; overflow-y: auto;">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <div class="card bg-secondary text-white mb-3">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <div>
                                        <p class="mb-1"><strong>Name:</strong> Category @i</p>
                                        <p class="mb-1"><strong>Description:</strong> Description for category @i</p>
                                    </div>
                                    <div class="d-flex flex-column gap-2">
                                        <button class="btn btn-sm btn-outline-light fw-bold" data-bs-toggle="modal"
                                            onclick="window.location.href='/home/CategotyEquioments'" data-category-id="@i">
                                            <i class="bi bi-pencil"></i> View
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
